<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorError">@color/colorLightRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="colorButtonAction">@color/colorAccent</item>
        <item name="iconTint">@color/textColorSecondary</item>
        <item name="colorBadgeNotification">@color/colorLightRed</item>
        <item name="colorTextDayOfWeek">@color/colorLightRed</item>
        <item name="colorTextDisabled">@color/textColorTertiary</item>
        <item name="textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
    </style>

    <style name="Card">
        <item name="android:elevation">@dimen/spacing_xxxsmall</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_gravity">center</item>
        <item name="background">@drawable/selector_list_item</item>

    </style>

    <style name="Header" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">?android:attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header.Description" parent="Header">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Description" parent="Text">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Inverse" parent="Text">
        <item name="android:textColor">?attr/textColorPrimaryInverse</item>
    </style>

    <style name="Text.FragmentTitle" parent="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.Logo" parent="Text">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Logo.Description" parent="Text.Logo">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.InputLayout" parent="Text">
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Email" parent="Text">
        <item name="android:autoLink">web|email</item>
    </style>

    <style name="Text.Phone" parent="Text">
        <item name="android:autoLink">phone</item>
    </style>


    <style name="Image.Clickable" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:clickable">true</item>
        <item name="android:selectable">true</item>
        <item name="android:padding">@dimen/spacing_xsmall</item>
    </style>

    <style name="Text.Main.Bold" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Main.Link" parent="Text">
        <item name="android:autoLink">web|email</item>
    </style>


    <style name="Text.Hint" parent="Text">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.DayOfWeek" parent="">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.DayOfWeek.Weekend" parent="Text.DayOfWeek">
        <item name="android:textColor">?attr/colorTextDayOfWeek</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">@dimen/spacing_xsmall</item>
        <item name="android:paddingBottom">@dimen/spacing_xsmall</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorButtonNormal</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">@dimen/spacing_xxsmall</item>
    </style>

    <style name="Button.Toggle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Button.Action" parent="Button">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="backgroundTint">?attr/colorButtonAction</item>
    </style>


    <style name="Theme.ui.MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.ui.instruction.InstructionActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/open_activity_transition
        </item>

        <item name="android:windowSharedElementExitTransition">
            @transition/open_activity_transition
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
