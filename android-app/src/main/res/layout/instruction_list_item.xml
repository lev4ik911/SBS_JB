<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing_xxsmall"
    android:layout_marginBottom="@dimen/spacing_xxsmall"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardElevation="0dp"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        app:cardCornerRadius="@dimen/corner_radius">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_paneer" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_xxsmall"
        android:layout_toEndOf="@id/card"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            tools:text="Panner Tikka Dry"
            style="@style/Text.Main.Bold"
             />
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text"
            android:singleLine="true"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            tools:text="Indian, Fast food" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_duration"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               style="@style/Text.Description"
                android:drawablePadding="@dimen/spacing_xxsmall"
                android:text="@{model.duration}"
                tools:text="21 min" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:gravity="center"
                android:background="@android:color/white"/>


            <androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3"
                android:gravity="center"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                style = "?android:attr/ratingBarStyleSmall"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
