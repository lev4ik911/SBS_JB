<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewmodel"
                type="by.iba.sbs.ui.login.SplashViewModel" />
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.SplashActivity">

        <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:shimmer_base_color="@color/colorPrimaryVariant"
                app:shimmer_colored="true"
                app:shimmer_duration="3000"
                app:shimmer_highlight_alpha="0.9"
                app:shimmer_highlight_color="@color/colorPrimaryVariant"
                app:shimmer_shape="radial">

            <LinearLayout
                    android:id="@+id/text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_small">
                <TextView
                        style="@style/Text.Logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/app_name"
                        />
                <TextView
                        style="@style/Text.FragmentTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:singleLine="false"
                        android:text="@string/app_description"
                        />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <RelativeLayout
                android:id="@+id/resend_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_version"
                    style="@style/Text.Logo.Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{String.format(@string/app_version_str, viewmodel.appVersion)}"
                    />
        </RelativeLayout>
    </RelativeLayout></layout>
