<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_xsmall"
    android:layout_marginVertical="@dimen/spacing_xxsmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xsmall">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_preview"
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_preview"
                    android:layout_width="@dimen/list_image_size"
                    android:layout_height="@dimen/list_image_size"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_paneer" />

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="@dimen/list_image_size"
                    android:layout_height="@dimen/list_image_size"
                    android:clickable="true"
                    android:elevation="@dimen/spacing_xxxsmall"
                    android:focusable="true"
                    android:padding="@dimen/spacing_small"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_outline"
                    android:tint="@android:color/white" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_step_number"
                    style="@style/Text.Main.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/spacing_small"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Indian, Fast food" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_drag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/spacing_small"
                android:src="@drawable/drag" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_description"
            style="@style/Text.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/spacing_xxsmall"
            tools:text="Indian, Fast food" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
