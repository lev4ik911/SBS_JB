<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_search">

    <fragment
            android:id="@+id/navigation_search"
            android:name="by.iba.sbs.ui.search.SearchFragment"
            android:label="@string/title_instructions"
            tools:layout="@layout/home_fragment"/>

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="by.iba.sbs.ui.dashboard.DashboardFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/dashboard_fragment"/>

    <fragment
            android:id="@+id/navigation_notifications"
            android:name="by.iba.sbs.ui.notifications.NotificationsFragment"
            android:label="@string/title_notifications"
            tools:layout="@layout/notifications_fragment"/>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="by.iba.sbs.ui.profile.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment" />
</navigation>